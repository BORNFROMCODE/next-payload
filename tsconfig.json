{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2019",
    "sourceMap": true,
    "module": "commonjs",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "paths": {
      "payload/generated-types": [
        "./payload-types.ts"
      ],
      "@payloadcms/next-payload/*": [
        "./dist/*"
      ]
    }
  },
  "ts-node": {
    "swc": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}